{
  "manifest_version": 2,
  "version": "0.0.0",
  "name": "Tweaks",
  "author": "Simon Lydell",
  "description": "Personal browser tweaks.",
  "homepage_url": "https://github.com/lydell/browser-tweaks",
  "browser_specific_settings": {
    "gecko": {
      "id": "browser-tweaks@lydell.github.io"
    }
  },
  "icons": {
    "48": "title.svg"
  },
  "permissions": [
    "<all_urls>",
    "contextMenus"
  ],
  "commands": {
    "close-tabs-to-right": {
      "suggested_key": {
        "default": "Alt+Shift+U"
      },
      "description": "Close tabs to the right"
    },
    "toggle-pinned-tab": {
      "suggested_key": {
        "default": "Alt+Shift+P"
      },
      "description": "Toggle pinned tab"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_start",
      "js": [
        "content.js"
      ]
    },
    {
      "matches": [
        "*://*.wikipedia.org/*"
      ],
      "run_at": "document_start",
      "css": [
        "wikipedia.css"
      ]
    }
  ]
}
